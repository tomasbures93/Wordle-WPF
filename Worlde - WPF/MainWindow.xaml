<Window x:Class="Worlde___WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Worlde___WPF"
        mc:Ignorable="d"
        Title="Wordle" 
        Height="500" 
        Width="500"
        ResizeMode="NoResize">
    <Grid>
        <!-- Menu -->
        <Grid x:Name="Menu" Visibility="Visible">
            <Label 
                Content="WORDLE" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,43,0,0" 
                FontSize="50" 
                FontWeight="Bold"/>
            <TextBox 
                x:Name="Name" 
                HorizontalAlignment="Center" 
                Margin="0,-100,0,0" 
                TextWrapping="Wrap" 
                HorizontalContentAlignment="Center" 
                Text="Insert Name" 
                FontStyle="Italic" 
                VerticalAlignment="Center" 
                Width="200" 
                Height="34" 
                FontSize="22" 
                GotFocus="ChangeName_GotFocus" />
            <Button 
                x:Name="start" 
                Content="Start Game" 
                FontSize="18"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0,0,0,0" 
                VerticalAlignment="Center" 
                Width="199" 
                Height="50" 
                Click="StartButton_Click" />
            <Button 
                x:Name="stats" 
                Content="Highscore" 
                HorizontalAlignment="Center" 
                Margin="0,115,0,0" 
                FontSize="18"
                FontWeight="Bold"
                VerticalAlignment="Center" 
                Width="199" 
                Height="50" 
                Click="HighscoreButton_Click" />
            <Button 
                x:Name="database" 
                Content="Words" 
                FontSize="18"
                FontWeight="Bold"
                HorizontalAlignment="Center" 
                Margin="0,230,0,0" 
                VerticalAlignment="Center" 
                Width="199" 
                Height="50" 
                Click="WordDatabase_Click" />
            <Button 
                x:Name="exit" 
                Content="Exit" 
                FontSize="18"
                HorizontalAlignment="Center" 
                Margin="0,345,0,0" 
                VerticalAlignment="Center" 
                Width="199" 
                Height="50" 
                Click="ExitButton_Click" />
        </Grid>

        <!-- Highscore -->
        <Grid x:Name="WordleStat" Visibility="Collapsed">
            <Label 
                Content="Highscore" 
                FontSize="22"
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" 
                VerticalAlignment="Top"/>
            <Button 
                Content="Back" 
                HorizontalAlignment="Left" 
                Margin="415,15,0,0" 
                VerticalAlignment="Top"
                Width="50"
                Height="30" 
                Click="BackButtonHighscore_Click"/>
            <ListBox 
                Name="playerList"
                Width="400"
                Height="400"
                FontSize="18" Margin="50,60,50,10"/>
        </Grid>

        <!-- Words -->
        <Grid x:Name="WordleDatabase" Visibility="Collapsed">
            <Label 
                Name="wordCount" 
                Content="Label" 
                FontSize="22"
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" 
                VerticalAlignment="Top"/>
            <ListBox 
                Name="words" 
                Margin="25,57,25,27" 
                Width="450" 
                Height="400"
                FontSize="18"
                BorderThickness="2"
                BorderBrush="Green"/>
            <Button 
                Content="Back" 
                HorizontalAlignment="Left" 
                Margin="415,15,0,0" 
                VerticalAlignment="Top"
                Width="50"
                Height="30" 
                Click="BackButtonWords_Click"/>
        </Grid>

        <!-- Game Interface -->
        <Grid x:Name="Game" Visibility="Collapsed">
            <Label 
                Content="WORDLE" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,10,0,0" 
                FontSize="50" 
                FontWeight="Bold"/>
            <TextBox Name="pos1" HorizontalAlignment="Center" Margin="-200,100,0,0" Text="" VerticalAlignment="Top" Width="30" Height="30" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="pos1_TextEntered"/>
            <TextBox Name="pos2" HorizontalAlignment="Center" Margin="-100,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" Height="30" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="pos2_TextEntered"/>
            <TextBox Name="pos3" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" Height="30" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="pos3_TextEntered"/>
            <TextBox Name="pos4" HorizontalAlignment="Center" Margin="100,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" Height="30" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="pos4_TextEntered"/>
            <TextBox Name="pos5" HorizontalAlignment="Center" Margin="200,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="30" Height="30" FontSize="20" MaxLength="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" KeyUp="pos5_TextEntered"/>
        </Grid>

        <!-- Lost Interface -->
        <Grid x:Name="wlMenu" Visibility="Collapsed">
            <Label 
                Content="WORDLE" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,10,0,0" 
                FontSize="50" 
                FontWeight="Bold"/>
            <Label 
                Name="status" 
                Content="" 
                HorizontalAlignment="Center" 
                Margin="0,87,0,0" 
                FontSize="22"
                FontWeight="Bold"
                VerticalAlignment="Top"/>
            <Label 
                Name="searched" 
                Content="" 
                FontSize="18" 
                HorizontalAlignment="Center" 
                Margin="0,150,0,0" 
                VerticalAlignment="Top"/>
            <Label 
                Name="rounds" 
                Content="Label" 
                HorizontalAlignment="Center" 
                Margin="0,200,0,0" 
                VerticalAlignment="Top"/>
            <Label 
                Name="points" 
                Content="Label" 
                HorizontalAlignment="Center" 
                Margin="0,230,0,0" 
                VerticalAlignment="Top"/>
            <Button 
                Content="Main Menu" 
                FontSize="22" 
                Width="150" 
                Height="50" 
                HorizontalAlignment="Center" 
                Margin="0,400,0,0" 
                VerticalAlignment="Top" 
                Click="GoToMainMenu_Click"/>
        </Grid>

        <!-- Win Interface -->
        <Grid x:Name="continueMenu" Visibility="Collapsed">
            <Label 
                Content="WORDLE" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,10,0,0" 
                FontSize="50" 
                FontWeight="Bold"/>
            <Label 
                Name="statusText" 
                Content="" 
                HorizontalAlignment="Center" 
                Margin="0,87,0,0" 
                FontSize="22"
                FontWeight="Bold"
                VerticalAlignment="Top"/>
            <Label 
                Name="searchedWord" 
                Content="" 
                FontSize="18" 
                HorizontalAlignment="Center" 
                Margin="0,150,0,0" 
                VerticalAlignment="Top"/>
            <Label 
                Name="roundsText" 
                Content="Label" 
                HorizontalAlignment="Center" 
                Margin="0,200,0,0" 
                VerticalAlignment="Top"/>
            <Button 
                Content="Next Game" 
                FontSize="22" 
                Width="150" 
                Height="50" 
                HorizontalAlignment="Center" 
                Margin="0,400,0,0" 
                VerticalAlignment="Top" 
                Click="ContinueButton_Click"/>
        </Grid>
    </Grid>
</Window>
